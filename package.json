{
  "name": "@nuxtjs/motd",
  "description": "Messages of the day lib for Nuxt.js",
  "version": "0.1.0",
  "repository": "https://github.com/nuxt-community/motd",
  "main": "dist/index.js",
  "license": "MIT",
  "author": "pimlie",
  "module": "dist/index.esm.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bili --format cjs,es src/index.js",
    "coverage": "codecov",
    "lint": "eslint src test",
    "release": "yarn lint && yarn test && yarn build && yarn standard-version",
    "postrelease": "./scripts/postrelease.sh",
    "test": "jest",
    "validate": "ajv -s node_modules/motd-json/src/schema.json -d src/messages/*.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "motd-json": "^0.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.9",
    "@babel/preset-env": "^7.25.9",
    "@nuxtjs/eslint-config": "^2.0.2",
    "ajv-cli": "^3.3.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^24.9.0",
    "bili": "^4.10.1",
    "codecov": "^3.8.3",
    "eslint": "^6.8.0",
    "jest": "^24.9.0",
    "jest-json-schema": "^2.1.0",
    "nuxt": "^2.18.1",
    "standard-version": "^7.1.0"
  }
}
